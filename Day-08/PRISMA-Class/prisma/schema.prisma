
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  username String @unique
  firstname String
  lastname String?
  password String
}

model Todo {
  id Int @id @default(autoincrement())
  title String
  description String?
  done Boolean @default(false)
  userId Int
}


